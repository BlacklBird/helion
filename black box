  <script>
    window.onload = () => {
      const password = "Ouroboros";
      const userInput = prompt("Mot de passe requis pour entrer dans la CHAMBRE NOIRE :");
      if (userInput !== password) {
        document.querySelector('h1').innerText = "⛔ Accès refusé";
        const hint = document.createElement('div');
        hint.className = 'hint';
        hint.innerHTML = "Indice : Au lieu d'être gourmand, cherchez la boîte… au risque de vous mordre la queue.";
        document.body.appendChild(hint);
      } else {
        window.location.href = "confrerie.html";
      }
    };
  </script>
